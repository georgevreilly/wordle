#!/bin/bash

# Copy results of a game to clipboard in the form GUESSES => ANSWER

# Default to most recent game
line="$(tail -1 games.md)"
# shellcheck disable=SC2016
newest="$(echo "$line" | sed -E 's/^\* ([0-9]+):.*$/\1/')"

game="$1"

if [[ -n "$game" ]]; then
    if [[ $game == -* ]]; then
        # negative number => offset from newest game
        game="$((newest + game))"
    fi
    if ! line="$(grep " $game:" games.md)"; then
        echo "Can't find '$game'"
        exit 1
    fi
else
    game="$newest"
fi

# shellcheck disable=SC2016
result="$(echo "$line" | sed -E 's/^\* ([0-9]+): `([^`]+)` ([^ ]+) `([^`]+)`$/\2 => \4/')"
echo "$game: $result"

if [ "$(uname)" == "Linux" ]; then
    echo "$result" | wl-copy
elif [ "$(uname)" == "Darwin" ]; then
    echo "$result" | pbcopy
fi
